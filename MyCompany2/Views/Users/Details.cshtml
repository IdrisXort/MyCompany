@model MyCompany2.Domein.User

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>User</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Cars)
        </dt>
        <dd>
            @if (Model.Cars.Count > 0)
            {
                @foreach (var car in Model.Cars)
                {

                    <span>@car.CarName</span>
                    <span>@car.CarModel.ToString()</span>

                    <br />
                }
            }
            @if(Model.Cars.Count == 0) {<span>There are no cars assigned to @Model.FirstName </span>
            }
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.UserId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
